      "Read(*.pem)",
      "Read(*.key)",
      "Write(.env*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(grep:*)"
    ],
    "includeCoAuthoredBy": false
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/stop-send-notification.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/auto-format.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/command-logger.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/scripts/statusline-with-tokens.sh"
  },
  "enabledPlugins": {
    "commit-commands@claude-code-plugins": true,
    "code-review@claude-code-plugins": true,
    "frontend-design@claude-code-plugins": true,
    "hookify@claude-code-plugins": true,
    "plugin-dev@claude-code-plugins": true
  },
  "alwaysThinkingEnabled": true
}
