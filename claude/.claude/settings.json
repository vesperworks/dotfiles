{
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Read(**)",
      "Write(src/**)",
      "Write(docs/**)",
      "Write(.tmp/**)",
      "Write(~/Works/**)",
      "Edit(src/**)",
      "Edit(docs/**)",
      "Edit(~/Works/**)",
      "MultiEdit",
      "LS",
      "Grep",
      "Glob",
      "TodoRead",
      "TodoWrite",
      "NotebookRead",
      "NotebookEdit",
      "WebSearch",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:developer.mozilla.org)",
      "WebFetch(domain:docs.python.org)",
      "WebFetch(domain:nodejs.org)",
      "WebFetch(domain:docs.npmjs.com)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:qiita.com)",
      "WebFetch(domain:tauri.app)",
      "WebFetch(domain:mastra.ai)",
      "WebFetch(domain:nextjs.org)",
      "WebFetch(domain:dify.ai)",
      "WebFetch(domain:n8n.io)",
      "WebFetch(domain:tailwindcss.com)",
      "WebFetch(domain:biomejs.dev)",
      "WebFetch(domain:vitest.dev)",
      "WebFetch(domain:bun.sh)",
      "WebFetch(domain:code.visualstudio.com)",
      "WebFetch(domain:typescriptlang.org)",
      "Task",
      "ExitPlanMode",
      "Skill(*)",
      "SlashCommand(*)",
      "mcp__ide__*",
      "mcp__context7__*",
      "ListMcpResourcesTool",
      "ReadMcpResourceTool",
      "Bash(git init:*)",
      "Bash(git add:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git mv:*)",
      "Bash(ni:*)",
      "Bash(nr:*)",
      "Bash(nlx:*)",
      "Bash(nu:*)",
      "Bash(bun:*)",
      "Bash(deno:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(rmdir:*)",
      "Bash(jq:*)",
      "Bash(yq:*)",
      "Bash(choose:*)",
      "Bash(awk:*)",
      "Bash(cut:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(tr:*)",
      "Bash(wc:*)",
      "Bash(gemini:*)",
      "Bash(cd:*)",
      "Bash(pwd)",
      "Bash(echo:*)",
      "Bash(printf:*)",
      "Bash(which:*)",
      "Bash(command:*)",
      "Bash(type:*)",
      "Bash(date:*)",
      "Bash(timestamp=:*)",
      "Bash(local timestamp=:*)",
      "Bash(:*date +%Y%m%d-%H%M%S:*)",
      "Bash(basename:*)",
      "Bash(dirname:*)",
      "Bash(~/.claude/scripts/smart-commit.sh:*)",
      "Bash(~/.claude/scripts/smart-commit.sh \"\")",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:neovim.io)",
      "Skill(research-output)",
      "WebFetch(domain:zenn.dev)",
      "WebFetch(domain:nikitabobko.github.io)",
      "WebFetch(domain:felixkratz.github.io)",
      "WebFetch(domain:catppuccin.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:eu-central-1-1.aws.cloud2.influxdata.com)",
      "mcp__pencil"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(rm -r *)",
      "Bash(rm *)",
      "Bash(dd:*)",
      "Bash(format:*)",
      "Bash(fdisk:*)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git force:*)",
      "Bash(git push --force:*)",
      "Bash(git branch -D *)",
      "Bash(git branch -d *)",
      "Bash(git checkout -- *)",
      "Bash(git clean *)",
      "Bash(git stash drop *)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(secrets/**)",
      "Read(.git/config)",
      "Read(node_modules/**)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(id_ecdsa)",
      "Read(*.pem)",
      "Read(*.key)",
      "Write(.env*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(grep:*)"
    ],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git branch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(sed:*)",
      "Bash(source:*)",
      "Bash(export:*)",
      "Bash(tmux split-window:*)",
      "mcp__puppeteer__*",
      "mcp__playwright__*",
      "mcp__playwright-server__*"
    ],
    "defaultMode": "dontAsk",
    "includeCoAuthoredBy": false
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/stop-send-notification.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/stop-send-notification.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/auto-format.sh"
          }
        ]
      },
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/stop-send-notification.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/block-dangerous-commands.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/block-author-attribution.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/scripts/command-logger.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/protect-sensitive-files.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y @owloops/claude-powerline@latest --theme=nord --style=minimal"
  },
  "enabledPlugins": {
    "commit-commands@claude-code-plugins": true,
    "code-review@claude-code-plugins": true,
    "frontend-design@claude-code-plugins": true
  },
  "language": "Japanese",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "env": {
    "ENABLE_TOOL_SEARCH": "true"
  },
  "alwaysThinkingEnabled": true
}